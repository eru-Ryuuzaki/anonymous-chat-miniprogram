.containerBox {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-bottom: 56px;
  background-color: #000
}

.textBox {
  display: block;
  text-align: left;
  max-width: 70%;
  border-radius: 5px;
  font-size: 13px;
  line-height: 26px;
  margin: 30rpx 0rpx 10rpx;
  box-sizing: border-box;
  padding: 0 5px;
  word-wrap: break-word;
  overflow-y: visible;
}

.fr {
  float: right;
  background: rgb(156, 234, 106);
}

.fl {
  float: left;
  background: rgb(246, 246, 246);
}

.handleBox {
  width: 100%;
  height: 34px;
  position: fixed;
  bottom: 0;
  background: #efefef;
  border-top: 1px solid #ddd;
  padding: 10px 0;
}

.btn_submit {
  float: right;
  right: 5px;
  width: 20%;
}

.input_submit {
  max-width: 70%;
  width: 70%;
  display: inline;
  float: left;
  background: #fff;
  margin: 2px 10px 2px 15px;
  border-radius: 5px;
}

.content-list image {
  border-radius: 50%;
  height: 92rpx;
  width: 92rpx;
  margin: 0 10rpx;
}

.nick-name {
  color: white;
  margin: 0 115rpx;
  position: relative;
  top: 30rpx;
}